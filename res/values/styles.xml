<resources>
    <style name="App" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppDark" parent="android:Theme.Holo">
        <!-- Same as above only for nightmode -->
    </style>

    <!-- Main Application themes -->
    <style name="AppTheme" parent="App">
        <item name="android:listSeparatorTextViewStyle">@style/sectionHeader</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:spinnerItemStyle">@style/MainSpinnerItem</item>
        <item name="android:spinnerStyle">@android:style/Widget.Holo.Spinner</item>
        <item name="android:spinnerDropDownItemStyle">@style/MainSpinnerDropDownItem</item>
        <item name="android:dropDownListViewStyle">@style/MainSpinnerStyle</item>
        <item name="android:actionBarWidgetTheme">@style/ActionBar.Widget</item>
    </style>

    <style name="SecondaryTheme" parent="App">
        <item name="android:actionBarStyle">@style/ActionBar</item>
    </style>

    <style name="SecondaryTheme_Dark" parent="AppDark">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowBackground">@color/at_dark</item>
        <item name="android:listViewStyle">@style/ListView_Dark</item>
    </style>

    <style name="ListView_Dark" parent="android:Widget.Holo.ListView">
        <item name="android:background">@color/at_dark</item>
    </style>

    <!-- ActionBar styles - includes search bar and options menu -->
    <style name="ActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:titleTextStyle">@style/ActionBar.TitleTextStyle</item>
        <item name="android:background">@color/at_light</item>
    </style>

    <style name="ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ActionBar.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/ActionBar.Menu</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.At</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="ActionBar.Menu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_at</item>
    </style>

    <style name="DropDownListView.At" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background</item>
    </style>

    <!-- Main Menu Spinner (for low height screens) -->

    <style name="MainSpinnerDropDownItem" parent="android:Widget.DropDownItem">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/at_dark</item>
    </style>

    <style name="MainSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MainSpinnerStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@android:color/white</item>
        <item name="android:background">@color/at_dark</item>
    </style>

    <!-- Sets the color of the separator on the tab list -->

    <style name="sectionHeader" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableBottom">@drawable/section_header</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
